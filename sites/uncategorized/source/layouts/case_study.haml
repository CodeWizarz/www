!!! 5
%html{lang: "en"}
  %head
    - current_page.data.title = case_study.title
    - if case_study.description
      - current_page.data.description = case_study.description
    - else 
      - current_page.data.description = case_study.cover_description
    - if case_study.twitter_image
      - current_page.data.twitter_image = case_study.twitter_image
    - if case_study.canonical_path
      - current_page.data.canonical_path = case_study.canonical_path
    = partial "includes/layout/head"
  %body
    = partial "includes/google/gtm"
    = partial "includes/layout/header"
    .case-study-page
      = partial "includes/case-study/cover"
      = yield
    = partial "includes/layout/footer"
