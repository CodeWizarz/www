<nav
    class="slp-sidebar slp-sticky slp-top-0 md:slp-relative slp-mb-64 md:slp-mb-132 slp-bg-white"
  >
  <div
    class="slp-overflow-y-auto slp-hidden md:slp-block slp-bg-white slp-top-full slp-right-0 slp-w-screen md:slp-max-w-md lg:slp-max-w-lg slp-p-16 md:slp-fixed md:slp-transform-none md:slp-w-max md:slp-py-0"
    style="top: 13rem !important; right: 0 !important"
  >
    <!-- TODO - make breadcrumbs smarter -->
    <div class="slp-text-sm slp-leading-8 slp-mb-6 slp-flex slp-flex-wrap slp-justify-left">
      <div class="slp-flex-initial">
        <a href="/customers/" class="slp-text-ui-secondary slp-mr-2">Customers</a> 
        <span class="slp-mr-2 slp-text-grayscale-333 slp-font-normal">/</span> 
        <a href="#" class="slp-text-ui-secondary slp-mr-2"><%= customer.title %></a>
      </div>
    </div>
    <img
      src="<%= customer.customer_logo %>"
      alt="<%= customer.title %> logo"
      class="customer-logo <%= customer.customer_logo_css_class %>"
    />
    <!-- Each section copy of sidebar -->
    <% if customer.customer_industry %>
      <p class="slp-text-xxs slp-uppercase slp-mt-16">
        Industry
      </p>
      <p class="slp-text-xl">
        <%= customer.customer_industry %>
      </p>
    <% end %>
    <% if customer.customer_employees %>
      <p class="slp-text-xxs slp-uppercase slp-mt-16">
        Employees
      </p>
      <p class="slp-text-xl">
        <%= customer.customer_employees %>
      </p>
    <% end %>
    <% if customer.customer_location %>
      <p class="slp-text-xxs slp-uppercase slp-mt-16">
        Location
      </p>
      <p class="slp-text-xl">
        <%= customer.customer_location %>
      </p>
    <% end %>
    <% if customer.customer_solution %>
      <p class="slp-text-xxs slp-uppercase slp-mt-16">
        Solution
      </p>
      <p class="slp-text-xl">
        <%= customer.customer_solution %>
      </p>
    <% end %>

    <!-- TODO: Set global CTA buttons instead of hardcoding -->
    <%= partial "includes/cms/customer-reference/slp-sidebar-cta" %>

    <slp-horizontal-rule class="slp-col-span-full slp-mt-24 slp-mb-24" />

    <div class="slp-mb-6">
      <!-- TODO - We might have this icon allready -->
