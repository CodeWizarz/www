      <span class="slp-text-base slp-font-semibold">Related stories</span>
    </div>
    <% 
      if customer.more_case_studies 
        case_studies = customer.more_case_studies
      else
         case_studies = data.global_case_study_data.more_case_studies
      end

      case_studies.each do| link | 
    %>
      <div class="slp-mt-16 slp-pl-16">
        <a href="<%= link.href %>" class="arrow-link-two slp-font-bold slp-text-sm slp-leading-6 hover:slp-underline group-hover:slp-text-ui-secondary slp-text-ui-secondary-dark"> 
          <%= link.title %>
          <svg width="9" height="6" xmlns="http://www.w3.org/2000/svg" class="slp-arrow hover:slp-visible slp-invisible slp-inline-block">
            <path d="M6.685.683L9 3 6.685 5.317a.624.624 0 11-.883-.884l.808-.808H.624a.625.625 0 010-1.25H6.61l-.808-.808a.625.625 0 01.883-.884z" fill="none" class="slp-fill-current group-hover:slp-text-ui-secondary group-focus:slp-text-ui-secondary"></path>
          </svg>
        </a>
      </div>
    <% end %>
  </div>
</nav>
