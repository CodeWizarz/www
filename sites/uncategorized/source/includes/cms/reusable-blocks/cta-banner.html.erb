<% cta_banner.each do |article| %>
  <section class="slp-flex slp-flex-col slp-text-center slp-m-64">
    <div
      class="slp-flex slp-justify-center slp-p-8 slp-justify-center slp-transform slp-min-w-0"
    >
      <svg
        width="80"
        height="78"
        viewBox="0 0 80 78"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        style="transform: rotate(45deg);"
      >
        <path
          d="M1.30102 65.6288C1.36553 64.8841 2.19436 64.4709 2.82789 64.8675L12.1364 70.6945C12.7984 71.1089 12.751 72.0885 12.052 72.437L1.79555 77.5509C1.09651 77.8995 0.285643 77.3479 0.353068 76.5697L1.30102 65.6288Z"
          fill="#2F80ED"
        ></path>
        <circle cx="74.5" cy="10.5" r="5.5" fill="#7759c2"></circle>
        <path
          d="M3.82968 0.832616C3.62769 0.3444 4.22243 -0.0826533 4.62048 0.264773L15.1 9.41138C15.3783 9.65434 15.3061 10.1049 14.9657 10.2487L10.6988 12.0511C10.4451 12.1583 10.3258 12.4505 10.4321 12.7046L13.9821 21.195C14.1868 21.6846 13.5884 22.1139 13.1902 21.763L1.59394 11.5454C1.31848 11.3027 1.3898 10.8558 1.72712 10.7109L6.52914 8.64781C6.78044 8.53985 6.89835 8.25 6.79379 7.99727L3.82968 0.832616Z"
          fill="#FCA326"
        ></path>
      </svg>
    </div>
    <div>
      <h2
        class="slp-font-normal slp-text-grayscale-333 slp-text-3xl md:slp-text-4xl slp-leading-tight slp-mb-16 slp-col-span-full"
      >
        <%= article.title %>
      </h2>
      <p
        class="slp-font-normal slp-text-grayscale-333 slp-text-xl slp-mb-16 slp-leading-tight"
      >
        <%= article.subtitle %>
      </p>
      <!-- A neat little loop that catches if it's the last button and applies a different class. By defualt, Netlify CMS sets this to a max of 2 buttons max -->
      <% len = article.buttons.length %>
      <% article.buttons.each_with_index do |button, index| %>
        <a 
          href="<%= button.button_url %>"
          data-ga-name="<%= button.button_text %>" 
          data-ga-location="body" 
          class="
            sm:slp-min-w-min slp-mr-8 slp-btn <%= button.button_class %>
            <% if index+1 == len && len != 1 %>
              slp-btn--secondary
            <% end %>
          "
        >
          <%= button.button_text   %>
        </a>
      <% end %>
    </div>
  </section>
<% end %>
