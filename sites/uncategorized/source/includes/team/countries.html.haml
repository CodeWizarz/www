- team = Gitlab::Homepage.team

.countries.member{id: 'countries'}
  .card
    .extra
      .member-header
        = image_tag "/images/windmill.png", alt: 'GitLab Countries and Regions', width: 120, height: 120, class: 'member-id', loading: 'lazy'
        .info
          .h3 GitLab Countries and Regions
          %h5
            We currently have team members in more than 60 countries and/or regions.
      .bio
        %ul
          - team.countries.each do |country|
            %li
              = country[:info]&.emoji_flag
              = country[:name]
              (#{country[:count]})
      %a.close-modal.fas.fa-times{ href: "#close-modal" }
